<%= form_with model: @article do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content, size: "50x10" %><br>
  <% if @article.new_record? %>
  <%= f.label :author %><br>
  <%= f.text_field :author %><br>
  <% end %>
  <%= f.submit %>
<% end %>
